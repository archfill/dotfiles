set folder = "imaps://imap.gmail.com:993"
set spoolfile = +INBOX
set postponed = "+[GMail]/Drafts"
set record = "+[GMail]/Sent Mail"

## Send options.
set smtp_url=smtps://y.hieda@chillda.com@smtp.gmail.com
set smtp_pass = "tvbrvuqfrivpcrml"
set realname='Yusaku Hieda'
set from=y.hieda@chillda.com
set hostname="gmail.com"
# set signature="John Doe"
# Connection options
set ssl_force_tls = yes
