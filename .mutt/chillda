set header_cache = ~/.cache/mutt/com.chillda.y.hieda/headers
set message_cachedir = ~/.cache/mutt/com.chillda.y.hieda/bodies
set certificate_file = ~/.mutt/com.chillda.y.hieda/certificates

## Hook -- IMPORTANT!
account-hook "chillda" "set imap_user=y.hieda@chillda.com imap_pass=tvbrvuqfrivpcrml"

